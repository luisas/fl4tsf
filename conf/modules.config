
process{

    withName: CENTRALIZED_TRAINING{
        tag = { "${meta.id} - epochs:${meta.epochs}" }
        publishDir = [
            path: { "${params.outdir}/${meta.id}/centralized_training/${meta.epochs}_epochs/lr_${meta.lr}-batchsize_${meta.batch_size}" },
            mode: "copy"
        ]
        if(params.use_gpu) {
            accelerator = 1 
            acceleratorType = 'gpu'
        }

    }

    withName: FEDERATED_TRAINING{
        tag = { "${meta.id} - ${meta.aggregation} rounds:${meta.serverrounds}" }
        publishDir = [
            path: { "${params.outdir}/${meta.id}/federated_training/${meta.aggregation}/${meta.serverrounds}_rounds/alpha_${meta.alpha}-lr_${meta.lr}-batchsize_${meta.batch_size}" },
            mode: "copy"
        ]
        if(params.use_gpu) {
            accelerator = 1 
            acceleratorType = 'gpu'
        }

    }
}