params {

    // General
    replicate = 1
    skip_centralized       = false // centralized runs on all data
    skip_local             = false // centralized local runs on local data for each client
    skip_federated         = false

    // Data
    dataset = "periodic"
    sample_tp = 0.5
    cut_tp = "false"
    extrap = false
    data_folder = "/gpfs/commons/groups/gursoy_lab/lsantus/projects/fl4tsf/data"
    batch_size = 32

    // Training configuration
    epochs = 100
    lr = 0.01
    lrdecay = 0.99 // 1.0 no decay 
    gradient_clipping = false
    storeweights = false

    // Model configuration
    obsrv_std = 0.01
    poisson = true
    rec_layers = 1
    gen_layers = 1
    units = 100
    gru_units = 100
    latents = 10
    rec_dims = 20
    z0_encoder = "odernn"
    train_classif_w_reconstr = false
    classif = false
    linear_classif = false
    classif_per_tp = false
    n_labels = 1
    input_dim = 1
    
    // NEW: ODE Solver configuration
    solver_method = "tsit5"           // Main solver: tsit5, dopri5, heun, euler
    encoder_solver_method = "euler"   // Encoder solver: euler, heun, tsit5, dopri5
    use_jit = true                    // Enable JIT compilation for TorchODE
    ode_rtol = 1e-5                   // ODE solver relative tolerance
    ode_atol = 1e-7                   // ODE solver absolute tolerance

    // Federated learning configuration
    serverrounds = 15
    decay_onset = 15
    clients = 2
    fractionfit = 1
    fractionevaluate = 1
    localepochs = 3
    numsupernodes = 2
    aggregation = "FedODE"
    alpha = 0.5
    use_wandb = false

    // Output configuration
    outdir                       = "./results"

    // Extra resouces configuration
    use_gpu                      = true

    // Config options
    custom_config_version        = 'master'
    custom_config_base           = "https://raw.githubusercontent.com/nf-core/configs/${params.custom_config_version}"

    // ECG Data Generation Parameters
    generate_ecg_data      = true       // Flag to enable/disable ECG data generation
    ecg_output_base_dir    = "data"     // Base directory for generated ECG data (relative to projectDir)
    ecg_n_clients          = 2          // Number of federated clients for data generation
    ecg_n_patients         = 500        // Number of patients per client for data generation
    ecg_duration_sec       = 120.0      // ECG recording duration in seconds
    ecg_variable_duration  = true       // Use fixed or variable recording durations
    ecg_seed               = 1          // Random seed for ECG generation
    ecg_dataset_prefix     = "ecg_clinical" // Prefix for dataset files
    ecg_dirichlet_alphas   = "10,1,0.5,0.1" // Comma-separated list of Dirichlet alpha values
}